<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:counter="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/animation_airport_price"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableBottom="@mipmap/airport_select"
        android:text="@string/price_airport"
        android:textColor="@color/text_color"
        android:textSize="10sp"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="70dp" >

        <TextView
            android:id="@+id/background1"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/txt_stroke_white_solid_trans"
            android:gravity="center" />

        <TextView
            android:id="@+id/background2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@mipmap/price_trans_green_bg"
            android:gravity="center" />

        <TextView
            android:id="@+id/background3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color3"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/animation_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/price_preferent"
                android:textColor="@color/text_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <com.aero.droid.dutyfree.talent.widgets.textcounter.CounterView
                    android:id="@+id/animation_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textStyle="italic"
                    android:textColor="@color/price_color"
                    android:textSize="22sp"
                    counter:autoStart="false"
                    counter:type="integer" />

                <com.aero.droid.dutyfree.talent.widgets.textcounter.CounterView
                    android:id="@+id/animation_dollar_price"
                    android:background="@drawable/custom_black_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textStyle="italic"
                    android:textColor="@color/gray_text"
                    android:textSize="15sp"
                    counter:autoStart="false"
                    counter:type="integer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/animation_app_price"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/phone_select"
            android:text="@string/price_online"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/animation_market_price"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableTop="@mipmap/market_select"
            android:text="@string/price_market"
            android:textColor="@color/text_color"
            android:textSize="10sp"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>