<?xml version="1.0" encoding="utf-8"?><!--我的特权任务-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="70dp">

        <ImageView
            android:id="@+id/item_task_level_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:src="@mipmap/task_1" />

        <TextView
            android:id="@+id/item_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_task_level_img"
            android:text="@string/task_privilege_for"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_task_has"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/radius_solid_purple"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/task_privilege_unhas"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/task_title_bg"
        android:gravity="center"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_task_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/task_title_star"
            android:drawablePadding="5dp"
            android:text="获取8.5折专区特权"
            android:textColor="@color/yellow"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_task_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@mipmap/task_title_star"
            android:drawablePadding="5dp"
            android:text="299元代金券"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:minHeight="25dp"
        android:text="@string/task_privilege_how"
        android:textColor="@color/black_text"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/item_task_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-15dp"
        android:background="@mipmap/write_coments_bg"
        android:gravity="center"
        android:orientation="vertical">

        <com.aero.droid.dutyfree.talent.widgets.ListViewForScrollView
            android:visibility="gone"
            android:id="@+id/item_my_task_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">
        </com.aero.droid.dutyfree.talent.widgets.ListViewForScrollView>
    </LinearLayout>

</LinearLayout>