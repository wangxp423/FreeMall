<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/person_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_background_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="拍照"
        android:textSize="16sp" />

    <View style="@style/personal_login_view_style" />

    <Button
        android:id="@+id/person_data_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_background_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="从相册中选择"
        android:textSize="16sp" />

    <View style="@style/personal_login_view_style" />

    <Button
        android:id="@+id/person_photo_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_background_selector"
        android:padding="10dp"
        android:text="取消"
        android:textSize="16sp" />
</LinearLayout>
