<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp">

        <ImageView
            android:id="@+id/coments_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_toRightOf="@+id/coments_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/coments_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEvvff"
                android:padding="5dp"
                android:textSize="10sp"></TextView>

            <TextView
                android:id="@+id/coments_nice_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="东西是极好的"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/coments_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:text="1小时前"
            android:textSize="12sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/coments_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="60dp"
        android:background="@color/gray_line"/>

</LinearLayout>