<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_stroke_gray_solid_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp">
        <ImageView
            android:id="@+id/second_category_title_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/second_category_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/second_category_title_img"
            android:text="@string/app_name"/>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/second_category_curpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/second_category_total_page"
                    android:layout_toRightOf="@+id/second_category_curpage"
                    android:layout_alignBottom="@+id/second_category_curpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.aero.droid.dutyfree.talent.widgets.InnerViewPager
            android:id="@+id/second_goods_img_vp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </com.aero.droid.dutyfree.talent.widgets.InnerViewPager>
        <ImageView
            android:id="@+id/second_goods_logo"
            android:layout_below="@+id/second_goods_img_vp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-25dp"
            android:background="@drawable/circle_stroke_gray_solid_white"
            android:padding="1dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <TextView
            android:id="@+id/second_goods_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_goods_logo"
            android:padding="5dp"
            android:text="商品描述balba"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:id="@+id/second_goods_price_layout"
            android:layout_below="@+id/second_goods_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/second_goods_app_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:padding="5dp"
                android:text="$2415.00"
                android:textColor="@color/purple"/>
            <TextView
                android:id="@+id/second_goods_market_price"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:background="@drawable/custom_black_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="$2415.00"
                android:textColor="@color/gray_text"/>
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp">
        <TextView
            android:id="@+id/second_category_add_shopcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:text="@string/add_shopcar"
            android:background="@drawable/radius_stroke_gray_solid_white"
            android:textColor="@color/purple"
            android:gravity="center"
            android:drawableLeft="@mipmap/shopbag_purple"/>
        <TextView
            android:id="@+id/second_category_more_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableLeft="@mipmap/circle_see_more"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:text="@string/goods_more"
            android:textColor="@color/purple"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>