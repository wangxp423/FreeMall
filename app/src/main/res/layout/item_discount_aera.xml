<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rect_stroke_gray_solid_white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:text="@string/active_downtime_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/gray_line"/>
            <com.aero.droid.dutyfree.talent.widgets.DownTimerView
                android:id="@+id/item_discount_downtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.aero.droid.dutyfree.talent.widgets.DownTimerView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/gray_line"/>
        </LinearLayout>
        <com.aero.droid.dutyfree.talent.widgets.GridViewForScrollView
            android:id="@+id/item_discount_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:listSelector="@drawable/listview_background_selector"
            android:numColumns="2"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp">
        </com.aero.droid.dutyfree.talent.widgets.GridViewForScrollView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/item_discount_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/purple"
                android:padding="5dp"
                android:text="vip1等级以上可以购买"/>
            <TextView
                android:id="@+id/item_discount_ischeck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right_black"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@color/black_text"
                android:padding="5dp"
                android:text="已满足"/>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/discount_title_bg">
        <TextView
            android:id="@+id/item_discount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="8.5折 特价专区"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </FrameLayout>
</RelativeLayout>