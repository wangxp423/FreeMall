<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/view_title_right_tv" />

    <com.ybao.pullrefreshview.layout.RGPullRefreshLayout
        android:id="@+id/msgcenter_pull_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.aero.droid.dutyfree.talent.widgets.ExpandHeaderView
            android:id="@+id/msgcenter_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.aero.droid.dutyfree.talent.widgets.ExpandHeaderView>

        <com.ybao.pullrefreshview.view.PullableListView
            android:id="@+id/msgcenter_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:divider="@null"
            android:listSelector="@null"
            android:scrollbars="none"></com.ybao.pullrefreshview.view.PullableListView>
    </com.ybao.pullrefreshview.layout.RGPullRefreshLayout>

</LinearLayout>