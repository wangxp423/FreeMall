<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/coupons_price_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/price_coupon"
                android:src="@mipmap/square_normal_img"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coupons_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/coupons_price_img"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/coupons_price_img"
                android:text="满200减30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/coupons_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/coupons_price_img"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/coupons_price_img"
                android:text="已使用"
                android:textColor="@color/purple"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/coupons_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/dai_jin_coupon" />

        <ImageView
            android:id="@+id/coupons_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/used_coupon"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="30dp">

        <TextView
            android:id="@+id/coupons_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="有效期:"
            android:textColor="@color/gray_text1"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coupons_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coupons_time_txt"
            android:text="2015-05-01至2015-06-01"
            android:textColor="@color/gray_text1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/coupons_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="全场通用"
            android:textColor="@color/gray_text1"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>