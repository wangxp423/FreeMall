<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/order_detail_good_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/order_detail_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/order_detail_good_img"
            android:padding="10dp"
            android:text="高级神仙水"
            android:textColor="@color/black_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_detail_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_detail_good_name"
            android:layout_below="@+id/order_detail_good_name"
            android:padding="10dp"
            android:text="＄1234"
            android:textColor="@color/black_text"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/order_detail_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_detail_good_name"
            android:layout_toRightOf="@+id/order_detail_good_price"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:text="×3"
            android:textColor="@color/black_text"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/order_detail_good_coments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/order_detail_coments_selector"
            android:background="@drawable/radius_stroke_purple_solid_white"
            android:text="评价"
            android:textColor="@color/purple"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>