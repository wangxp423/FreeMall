<?xml version="1.0" encoding="utf-8"?><!--商品详情推荐商品-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp">

        <TextView
            android:id="@+id/view_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/active_top_ten"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:text="@string/best_selling_good"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_recomend_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow_right_black"
            android:text="@string/see_more"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />
    </RelativeLayout>
    <com.aero.droid.dutyfree.talent.widgets.GridViewForScrollView
        android:id="@+id/view_recommend_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:listSelector="@color/white"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:scrollbars="none"></com.aero.droid.dutyfree.talent.widgets.GridViewForScrollView>
</LinearLayout>