<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RelativeLayout
            android:id="@+id/title_back_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_to_my_iv_mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="center"
                android:src="@drawable/title_back_selector"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/my_coupons_unused"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="40dp"
                android:textSize="16sp"
                android:text="@string/coupons_unused"/>
            <TextView
                android:id="@+id/my_coupons_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="35dp"
                android:textSize="16sp"
                android:text="@string/coupons_used"/>
            <TextView
                android:id="@+id/my_coupons_out_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="35dp"
                android:textSize="16sp"
                android:text="@string/coupons_outdate"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/my_coupons_line"
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_marginLeft="60dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/rect_purple_3dp"/>

    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/my_coupons_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>