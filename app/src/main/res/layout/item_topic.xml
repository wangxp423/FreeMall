<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_topic_good_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_topic_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="asdkahlk手工带"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_topic_good_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="$232"
                android:padding="5dp"
                android:textColor="@color/purple"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_topic_good_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_black_line"
                android:text="$232"
                android:padding="5dp"
                android:textColor="@color/gray_text"
                android:textSize="14sp"/>
        </LinearLayout>

        <com.aero.droid.dutyfree.talent.widgets.JustifyTextView
            android:id="@+id/item_topic_good_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:text="大会开始大声达拉斯来得及阿拉山口就对啦恢复速度哈佛i啊哈类似达拉斯的啦看好三大三大绿色科技的"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>

