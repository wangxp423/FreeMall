<?xml version="1.0" encoding="utf-8"?><!--我的收藏-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_collect_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_collect_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:text="商品名称等"/>
        <LinearLayout
            android:id="@+id/item_top_good_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:text="＄"/>
            <TextView
                android:id="@+id/item_collect_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:text="2500"/>
            <TextView
                android:id="@+id/item_collect_good_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_red_line"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="9sp"
                android:textColor="@color/black"
                android:text="1999"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_collect_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_stroke_gray_solid_white"
            android:text="@string/buy_now"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/purple"
            android:minHeight="30dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/item_collect_lable"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:src="@mipmap/coments_star_normal"/>


</RelativeLayout>