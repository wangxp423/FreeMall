<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F2FF"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:text="@string/please_chose_date"
            android:textColor="@color/gray_text1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/airport_chose_date_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:text="@string/find_password_done"
            android:textColor="@color/gray_text1"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />
    <com.aero.droid.dutyfree.talent.widgets.DateWheelLayout
        android:id="@+id/airport_chose_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.aero.droid.dutyfree.talent.widgets.DateWheelLayout>
</LinearLayout>