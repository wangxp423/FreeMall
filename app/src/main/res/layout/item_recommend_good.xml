<?xml version="1.0" encoding="utf-8"?><!--top10 item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_recommend_good_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_recommend_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/black_text"
            android:text="商品名称等"/>
        <TextView
            android:id="@+id/item_recommend_good_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_text"
            android:text="商品名称等"/>
        <LinearLayout
            android:id="@+id/item_top_good_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="＄"/>
            <TextView
                android:id="@+id/item_recommend_good_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/purple"
                android:text="2500"/>
            <TextView
                android:id="@+id/item_recommend_good_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:background="@drawable/custom_black_line"
                android:text="234"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/item_top_sort"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:text="2"
        android:textStyle="bold"
        android:background="@mipmap/good_sort_bg"/>


</RelativeLayout>