<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_brand_good_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/square_normal_img"/>
    <TextView
        android:id="@+id/item_brand_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:lines="2"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/item_brand_good_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:textColor="@color/gray_text1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:text="ï¼„"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/item_brand_good_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:minHeight="20dp"
            android:text="390"
            android:textSize="18sp"
            android:textColor="@color/purple"/>
        <TextView
            android:id="@+id/item_brand_good_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_black_line"
            android:padding="5dp"
            android:singleLine="true"
            android:minHeight="20dp"
            android:text="1890"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>