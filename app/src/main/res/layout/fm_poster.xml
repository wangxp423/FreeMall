<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/poster_good_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/poster_good_brand_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/square_normal_img"/>
        <TextView
            android:id="@+id/poster_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Mademoiselle系列菱格女包"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp">
            <TextView
                android:id="@+id/poster_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/purple"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="＄4250.00"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/poster_good_favo_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/goods_detail_favo_pressed"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:minHeight="35dp"
                    android:text="128"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/poster_good_coments_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:drawableLeft="@mipmap/goods_detail_coments_pressed"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:minHeight="35dp"
                    android:text="128"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/poster_divider_line"/>
        <RelativeLayout
            android:id="@+id/poster_good_active_downtime_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/poster_divider_line"/>

            <TextView
                android:id="@+id/poster_good_active_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="【7.5折活动中】"
                android:textColor="@color/black_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/poster_good_active_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/poster_good_active_downtime"
                android:text="结束倒计时"
                android:textColor="@color/black_text"
                android:textSize="14sp" />

            <com.aero.droid.dutyfree.talent.widgets.DownTimerView
                android:id="@+id/poster_good_active_downtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"></com.aero.droid.dutyfree.talent.widgets.DownTimerView>

        </RelativeLayout>
        <TextView
            android:id="@+id/poster_good_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:text="＄4250.00"/>
    </LinearLayout>

</FrameLayout>