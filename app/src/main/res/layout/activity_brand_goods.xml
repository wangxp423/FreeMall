<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/brand_title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="center"
                android:src="@drawable/title_back_selector"/>
        </RelativeLayout>
    </FrameLayout>
    <com.ybao.pullrefreshview.layout.RGPullRefreshLayout
        android:id="@+id/brand_pull_layout"
        android:layout_below="@+id/brand_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.aero.droid.dutyfree.talent.widgets.ExpandFooterView
            android:id="@+id/brand_goods_footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.aero.droid.dutyfree.talent.widgets.ExpandFooterView>
        <com.ybao.pullrefreshview.view.PullableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/brand_introduce_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/brand_title_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/brand_img"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="1dp"
                            android:background="@drawable/circle_stroke_gray_solid_white"
                            android:layout_marginTop="25dp"
                            android:src="@mipmap/square_normal_img"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/brand_name"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_version"
                            android:textSize="18sp"/>
                        <LinearLayout
                            android:id="@+id/brand_desc_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/gray_line"/>
                            <TextView
                                android:id="@+id/brand_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                android:text="@string/about_version"
                                android:textColor="@color/gray_text"
                                android:textSize="12sp"/>
                            <ImageView
                                android:id="@+id/brand_more_desc"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:scaleType="center"
                                android:src="@mipmap/arraw_down_more_black"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/gray_line"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <com.aero.droid.dutyfree.talent.widgets.GridViewForScrollView
                    android:id="@+id/brand_goods_gv"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@color/white"
                    android:numColumns="2"
                    android:scrollbars="none">
                </com.aero.droid.dutyfree.talent.widgets.GridViewForScrollView>
            </LinearLayout>
        </com.ybao.pullrefreshview.view.PullableScrollView>
    </com.ybao.pullrefreshview.layout.RGPullRefreshLayout>
</RelativeLayout>