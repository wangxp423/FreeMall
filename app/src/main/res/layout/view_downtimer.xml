<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >
    <LinearLayout
        android:id="@+id/tv_day_layout"
        style="@style/DownTimerLayoutStyle">
        <TextView
            android:id="@+id/tv_day_decade"
            style="@style/DownTimerTextViewStyle" />

        <TextView
            android:id="@+id/tv_day_unit"
            style="@style/DownTimerTextViewStyle"
            android:layout_marginLeft="1dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_day_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text=":"
        android:textStyle="bold"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/purple"
        android:textSize="14sp" />
    <LinearLayout
        style="@style/DownTimerLayoutStyle">
        <TextView
            android:id="@+id/tv_hour_decade"
            style="@style/DownTimerTextViewStyle" />

        <TextView
            android:id="@+id/tv_hour_unit"
            style="@style/DownTimerTextViewStyle"
            android:layout_marginLeft="1dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text=":"
        android:textStyle="bold"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/purple"
        android:textSize="14sp" />
    <LinearLayout
        style="@style/DownTimerLayoutStyle">
        <TextView
            android:id="@+id/tv_min_decade"
            style="@style/DownTimerTextViewStyle" />

        <TextView
            android:id="@+id/tv_min_unit"
            style="@style/DownTimerTextViewStyle"
            android:layout_marginLeft="1dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=":"
        android:textStyle="bold"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/purple"
        android:textSize="14sp" />
    <LinearLayout
        style="@style/DownTimerLayoutStyle">
        <TextView
            android:id="@+id/tv_sec_decade"
            style="@style/DownTimerTextViewStyle" />

        <TextView
            android:id="@+id/tv_sec_unit"
            style="@style/DownTimerTextViewStyle"
            android:layout_marginLeft="1dp" />
    </LinearLayout>


</LinearLayout>